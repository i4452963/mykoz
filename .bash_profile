# Activate py310 virtual environment.
source ~/py310/bin/activate

# Color-code prompt.
source ~/.bash_prompt

# Make gnu screen show more useful information.
export SCREENDIR=$HOME/.screen

export JUPYTER_CONFIG_DIR=~/repos/

